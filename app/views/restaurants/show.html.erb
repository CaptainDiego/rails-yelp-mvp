

<h1><%= @restaurant.name %><%= link_to restaurant_path(@restaurant), method: :delete,data: { confirm: "Are you sure?" } do %> <i class="far fa-trash-alt"></i>
    <% end %></h1>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>

<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.phone_number %></h2>
<h2><%= @restaurant.category %></h2>

 <% @restaurant.reviews.each do |review| %>
 <ul>
   <li>
     <%= review.content %>
     (<%= review.rating %>)
   </li>
 </ul>

 <% end %>


